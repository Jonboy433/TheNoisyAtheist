<h1> <%= @blog.title %></h1>
<p>Submitted <%= time_ago_in_words(@blog.created_at) %> Ago by <%= @blog.user.user_id %></p>
</br>

<h2><%= @blog.content %></h2>

<% if user_signed_in? %>
	<% if current_user.id == @blog.user.id %>
		<a href= <%= edit_blog_url(@blog.display_id) %> ><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
	<% end %>
<% end%>
</br>
</br>

<div id="comments">
	<h1><%= pluralize(@comments.count,"comment")%></h1>
	<%= render @blog.comments %>		
</div>

<% unless current_user.blank? %>
	<%= render "/comments/form" %>
<% end %>



