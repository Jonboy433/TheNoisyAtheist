<h1> <%= @blog.title %>
	<% if user_signed_in? %>
		<% if current_user.id == @blog.user.id %>
			<a href= <%= edit_blog_url(@blog.display_id) %>><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a>
		<% end %>
	<% end%>
</h1>
<p>Submitted <%= time_ago_in_words(@blog.created_at) %> Ago by <a href= <%= user_profile_url(@blog.user.user_id) %>> <%= @blog.user.user_id %></a></p>

</br>
	<p><%= @blog.content %></p>
</br>

<hr>
	<div class="well">
        <h4>Leave a Comment:</h4>
			<%= render '/comments/form' %>
	</div>
<hr>

<h3 id="comments-count"><%= pluralize(@comments.count,"comment")%></h3>
<div id="comments-list">
<%= render @blog.comments %>
</div>		

